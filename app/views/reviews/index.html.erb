<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Taste</th>
      <th>Service</th>
      <th>Environment</th>
      <th>Foodstyle</th>
      <th>Vfm</th>
      <th>Fullreview</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= image_tag review.image.url(:medium) %></td>
        <td><%= review.taste %></td>
        <td><%= review.service %></td>
        <td><%= review.environment %></td>
        <td><%= review.foodstyle %></td>
        <td><%= review.vfm %></td>
        <td><%= review.fullreview %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

